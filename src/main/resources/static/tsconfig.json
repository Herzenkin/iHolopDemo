{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "filesGlob" : [
    "app/**",
    "!node_modules/**",
    "!images/**"
  ],
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "node_modules/*"
  ]
}
